#! vim:ft=vim
map j feedkeys 5<Down>
map k feedkeys 5<Up>
map J feedkeys <C-d>
map K feedkeys <C-u>

set selection-clipboard "clipboard"
set show-hidden true
set statusbar-home-tilde true
set window-title-basename true
set recolor false
set adjust-open "best-fit"

set completion-bg "#16161e"
set completion-fg "#c0caf5"
set completion-group-bg "#3b4261"
set completion-group-fg "#c0caf5"
set completion-highlight-bg "#33467c"
set completion-highlight-fg "#c0caf5"
set default-fg "#c0caf5"
set default-bg "#1a1b26"
set inputbar-fg "#c0caf5"
set inputbar-bg "#1a1b26"
set notification-fg "#a0c980"
set notification-bg "#1a1b26"
set notification-error-fg "#ec7279"
set notification-error-bg "#1a1b26"
set notification-warning-fg "#deb974"
set notification-warning-bg "#1a1b26"
set tabbar-fg "#c0caf5"
set tabbar-bg "#16161e"
set tabbar-focus-fg "#1a1b26"
set tabbar-focus-bg "#d38aea"
set statusbar-fg "#c0caf5"
set statusbar-bg "#1a1b26"
set highlight-color "#3d59a1"
set highlight-active-color "#ff9e64"
set recolor-darkcolor "#c0caf5"
set recolor-lightcolor "#1a1b26"
set render-loading-bg "#deb974"
set render-loading-fg "#1a1b26"
set index-fg "#c0caf5"
set index-bg "#1a1b26"
set index-active-fg "#1a1b26"
set index-active-bg "#7aa2f7"
