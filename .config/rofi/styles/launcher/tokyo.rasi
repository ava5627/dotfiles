* {
    background-color: #1a1b26;
    border-color: #1a1b26;
    text-color: #c0caf5;
    spacing: 5;
    width: 35%;
    // height: 50%;
}

window {
    border: 1px 1px 1px 1px;
    border-color: #bb9af7;
}

inputbar {
    border: 0 0 1px 0;
    border-color: #bb9af7;
    children: [prompt,entry];
}

prompt {
    padding: 16px;
    border: 0 1px 0 0;
}

textbox {
    background-color: #bb9af7;
    border: 0 0 1px 0;
    border-color: #bb9af7;
    padding: 8px 16px;
}

entry {
    padding: 16px;
}

listview {
    cycle: false;
    padding: 1% 0.5% 1% 0.75%;
    background-color: #15161e;
    columns: 2;
    lines: 8;
    cycle: false;
    dynamic: true;
    layout: vertical;
}

element {
    border: 0 0 1px 0;
    padding: 8px;
}

element selected {
    border: 1px 1px 1px 1px;
    border-color: #bb9af7;
    text-color: #15161E;
}
